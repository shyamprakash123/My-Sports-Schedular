<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <style>
        body {
  font-family: sans-serif;
  background: white;
}

.users:hover .trash-icon {
  display: block;
}

.users {
  -webkit-user-select: none; /* Safari */
  -ms-user-select: none; /* IE 10 and IE 11 */
  user-select: none; /* Standard syntax */
}
</style>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        var token= document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");

        function addPlayer() {
            fetch(`/sports/addPlayer/<%= sport[0].sports_name %>/<%= session[0].id %>`, {
      method: "post", // or 'PUT'
      headers: {
        "Content-Type": "application/json",
        
      },
      body:JSON.stringify({
            "_csrf":token,
        })
    }).then((res) => {
        if(res.ok){
            window.location.reload();
        }
    })
    .catch((err) => {
        console.error(err);
    })
        }


        function removePlayer(){
        fetch(`/sports/addPlayer/<%= sport[0].sports_name %>/<%= session[0].id %>`, {
      method: "delete", // or 'PUT'
      headers: {
        "Content-Type": "application/json",
        
      },
      body:JSON.stringify({
            "_csrf":token
        })
    }).then((res) => {
        if(res.ok){
            window.location.reload();
        }
    })
    .catch((err) => {
        console.error(err);
    })
        }

        function deletePlayer(userId){
        fetch(`/sports/deletePlayer/<%= sport[0].sports_name %>/<%= session[0].id %>`, {
      method: "delete", // or 'PUT'
      headers: {
        "Content-Type": "application/json",
        
      },
      body:JSON.stringify({
            "_csrf":token,
            "userId":userId
        })
    }).then((res) => {
        if(res.ok){
            window.location.reload();
        }
    })
    .catch((err) => {
        console.error(err);
    })
        }

    function deleteMember(id){
        fetch(`/sports/deleteMember/<%= sport[0].sports_name %>/<%= session[0].id %>`, {
      method: "delete", // or 'PUT'
      headers: {
        "Content-Type": "application/json",
        
      },
      body:JSON.stringify({
            "_csrf":token,
            "memberId":id
        })
    }).then((res) => {
        if(res.ok){
            window.location.reload();
        }
    })
    .catch((err) => {
        console.error(err);
    })
        }
    </script>
    <title><%= sport[0].sports_name %>-Session</title>
</head>
<body>
    <h1><%= sport[0].sports_name %> Session #<%= session[0].id %></h1>
    <h3>This session is scheduled for <%= session[0].dateTime.toLocaleString('en-US', {
  day: '2-digit',
  month: '2-digit',
  year: 'numeric',
  hour: '2-digit',
  minute: '2-digit',
  hour12: true
}) %>, to be played at "<%= session[0].place %>"</h3>
    <h3>Players</h3>
    <% if(session[0].members.length > 0){ %>
        <ul class="list-none">
                <% for(var i=0; i < session[0].members.length; i++) { %>
                <li class="users">
                    <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50">
                        <h3><%= session[0].members[i] %></h3>
                        <% if(session[0].userId==userId){ %>
                            <a href="#" class="hidden trash-icon ml-2" onclick="deleteMember(<%= i %>)">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                            </svg>
                        </a>
                            <% } %>
                    </div>
                </li>
                <% } %>
            </ul>
            <% } %>
            <!--  -->
            <% if(players.length > 0){ %>
        <ul class="list-none">
                <% for(var i=0; i < players.length; i++) { %>
                <li class="users">
                    <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50">
                        <% if(players[i].userId==userId){ %>
                            <h3>You</h3>
                        <% }else{ %>
                            <% if(session[0].userId==players[i].userId){ %>
                                <h3><%= players[i].userName %></h3>
                                <h3 class="ml-6 text-gray-400">(Organizer)</h3>
                            <% }else{ %>
                                <h3><%= players[i].userName %></h3>
                            <% } %>
                            <% } %>
                        <% if(session[0].userId==userId){ %>
                            <a href="#" class="hidden trash-icon ml-2" onclick="deletePlayer(<%= players[i].userId %>)">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                            </svg>
                        </a>
                            <% } %>
                    </div>
                </li>
                <% } %>
            </ul>
            <% } %>

            <% if(session[0].members.length==0 && players.length==0){ %>
                <h2>There are no players available in this session. Join?</h2>
            <% } %>
                <% if(session[0].userId==userId){ %>
                    <div>
                    <a href="/sports/editsession/<%= sport[0].sports_name %>/<%= session[0].id %>">Edit session</a>
                    <a href="/sports/cancel-session/<%= session[0].id %>">Cancel session</a>
                </div>
                <% }else{ %>
                    <div>
                        <% if(isJoined == true){ %>
                           <button type="submit" onclick="removePlayer()" class="text-white bg-green-600 hover:bg-green-800 font-medium rounded px-5 py-2">Leave this session</button>
            <% }else{ %>
                <% if(session[0].players==0){ %>
                <button type="submit" class="text-white bg-green-300 font-medium rounded px-5 py-2">This session is full now</button>
                <% }else{ %>
                <button type="submit" onclick="addPlayer()" class="text-white bg-green-600 hover:bg-green-800 font-medium rounded px-5 py-2">Join this session</button>
                <% } %>
            <% } %>
                    </div>

                    <% } %>
        

</body>
</html>